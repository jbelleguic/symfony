{% extends 'base.html.twig' %}

{% block title %}Les livres{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body {background-color: whitesmoke}
</style>

<section class="py-5">
    <section class="container px-4 px-lg-5 mt-5">
        <section class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for book in books %}
                <section class="col mb-5">
                    <section class="card h-100">
                        <img src="{{ asset('uploads/images/' ~ book.cover) }}" alt="Cover">
                        <section class="card-body p-4">
                            <section class="text-center">
                                <h5 class="fw-bolder">{{ book.title }}</h5>
                            </section>
                        </section>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                {% for a in book.authors %}
                                    <h3>{{ a.name }}</h3>
                                {% endfor %}
                            </div>
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-auto" href="{{ path('app_book_show', {id: book.id}) }}">Voir</a>
                            </div>
                        </div>
                    </section>
                </section>
            {% endfor %}
        </section>
    </section>
</section>
{#    {{ pagerfanta(books) }}#}
{% endblock %}
