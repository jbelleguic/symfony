{% extends 'base.html.twig' %}

{% block title %}Détails du livre{% endblock %}

{% block body %}
    <style>
    body{background-color: whitesmoke}
    </style>
        {% if book is not null %}
            <section class="py-5">
                <section class="container px-4 px-lg-5 my-5">
                    <section class="row gx-4 gx-lg-5 align-items-center">
                        <section class="col-md-6">
                            <img src="{{ asset('uploads/images/' ~ book.cover) }}" class="card-img-top mb-5 mb-md-0" alt="Cover">
                        </section>
                        <section class="col-md-6">
                            <div class="small mb-1">ISBN: {{ book.isbn }}</div>
                            <h1 class="display-5 fw-bolder">{{ book.title }}</h1>
                            <div class="fs-5">
                                <span>Auteur(s): {{ book.authors|map(a => a.name)|join(', ') }}</span>
                            </div>
                            <div class="fs-5">
                                <span>Éditeur: {{ book.editor.name }}</span>
                            </div>
                            <div class="fs-5">
                                <span>{{ book.pageNumber }}{{ book.pageNumber is not null ? ' pages' }}</span>
                                <span> - {{ book.editedAt|date('d M Y') }}</span>
                            </div>
                            <div class="fs-5 mb-5">
                                <span>Statut: {{ book.status.getLabel() }}</span>
                            </div>
                            <p class="lead">{{ book.plot }}</p>
                            <div class="d-flex">
                                <a href="{{ path('app_book') }}">
                                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                                        Retour à la liste
                                    </button>
                                </a>
                            </div>
                        </section>
                    </section>
                </section>
            </section>
        {% else %}
            <div>Livre non trouvé</div>
        {% endif %}
        </ul>
    </div>
{% endblock %}
