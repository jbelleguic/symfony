{% extends 'base.html.twig' %}

{% block title %}Détails du livre{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    </style>

    <div class="example-wrapper">

        <h1>Livre : </h1>
        {% if book is not null %}
            <div class="card mb-1 m-auto">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <h4 class="mb-1">{{ book.title }}</h4>
                        <small class="text-muted">Identifiant : {{ book.id }}</small>
                    </div>
                    <div class="d-flex justify-content-between card-text">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Couverture : {{ book.cover }}</li>
                            <li class="list-group-item">Date d'édition : {{ book.editedAt|date('d M Y') }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <a href="{{ path('app_book') }}" class="btn btn-primary">Retour</a>
        {% else %}
            <div>Livre non trouvé</div>
        {% endif %}
        </ul>
    </div>
{% endblock %}
