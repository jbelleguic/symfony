{% extends 'base.html.twig' %}

{% block title %}Liste d'auteurs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="example-wrapper">
    <h1>Liste d'auteurs</h1>

    <ul class="list-group list-group-flush">
        {% for author in authors %}
            <div class="card mb-1">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-around">
                        <a href="{{ path('app_admin_author_show', {id: author.id}) }}" class="stretched-link link-dark">
                            <h4 class="mb-1">{{ author.name }}</h4>
                        </a>
                        <span class="text-muted">Identifiant : {{ author.id }}</span>
                    </div>
                </div>
            </div>
            {% else %}
                <li>Aucun enregistrement en BD</li>
        {% endfor %}
    </ul>
    {{ pagerfanta(authors) }}
</div>
{% endblock %}
